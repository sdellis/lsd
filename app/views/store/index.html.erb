<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="page-header">
    <h1>Catalog<small> Find what suits you.</small></h1>
</div>
    <div class="row-fluid">
      <ul class="thumbnails">
      <% cache ['store', Product.latest] do %>
        <% @products.each do |product| %>
          <% cache ['thumbnail', product] do %>
            <li class="span4">
              <div class="thumbnail">
                <%= image_tag(product.image_url, :height => '200', :width => '300') %>
                <div class="caption">
                    <h3><%= product.title %></h3>
                    <p class="price"><strong>Only <%=number_to_currency( product.price ) %>!</strong></p>
                    <p><%= sanitize(product.description) %></p>
                    <p>
                      <%= button_to 'See Details', show_path(product.id), method: :get, action: :show, class: "btn btn-large btn-warning" %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>